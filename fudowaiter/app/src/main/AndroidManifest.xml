<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartdatainc.fudowaiter">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.smartdatainc.activities.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.smartdatainc.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartdatainc.activities.AppActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity android:name="com.smartdatainc.activities.LoginActivity" />
        <activity android:name="com.smartdatainc.activities.SignUp" />
        <activity android:name="com.smartdatainc.activities.DashboardActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="b04a65c60e5dfd5ba74d02653870cee3cad8c327" />

        <activity
            android:name="com.smartdatainc.activities.WaiterDashBoard"
            android:label="@string/title_activity_waiter_dash_board"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.smartdatainc.activities.OrderDetailsActivity"
            android:label="@string/title_activity_order_details"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>